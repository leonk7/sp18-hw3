<%= form_tag students_path do %>
  <%= label_tag(:ice_cream, "Favorite ice cream") %>
  <%= text_field_tag(:ice_cream, nil, placeholder: @placeholder_cream) %>

  <%= label_tag(:professor, "Favorite professor") %>
  <%= text_field_tag(:professor, nil, placeholder: @placeholder_prof) %>

  <%= label_tag(:grade_level, "Favorite artist") %>
  <%= text_field_tag(:artist, nil, placeholder: @placeholder_artist) %>

  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

  <%= submit_tag("Create student") %>
<% end %>